{
  "name": "linkdein-agent",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "config": "node scripts/set-env.js",
    "prebuild": "npm run config",
    "start": "npm run config && ng serve",
    "build": "ng build",
    "build:dev": "npm run config && ng build --configuration development",
    "watch": "npm run config && ng build --watch --configuration development",
    "test": "ng test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.4",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@langchain/core": "^1.1.8",
    "@langchain/google-genai": "^2.1.3",
    "@types/pdfjs-dist": "^2.10.377",
    "pdfjs-dist": "^5.4.530",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.3",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}